<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spreadsheet</title>
</head>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    @font-face {
        font-family: Chap;
        src: url("../fonts/Chap-Regular/Chap-Regular.ttf");
    }

    html {
        font-family: Chap;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>
<body>
<div class="container">
    <!-- Calculate and display total amount -->
    <% let totalAmount = 0; %>
    <% debtors.forEach(debtor => { %>
        <% if (debtor.status === "paid") { %>
            <% totalAmount += debtor.amount; %>
        <% } %>
    <% }) %>
    <p style="margin: 20px 0;">Total Amount Paid: <%= totalAmount.toFixed(2) %></p>

    <table>
        <thead>
        <tr>
            <th>Time Saved</th>
            <th>Person</th>
            <th>Amount Paid</th>
        </tr>
        </thead>
        <tbody>
        <% debtors.forEach(debtor => { %>
            <% if (debtor.status === "paid") { %>
                <tr>
                    <!-- Format date using EJS -->
                    <td><%= new Date(debtor.date).toLocaleDateString('en-US', { weekday: 'short', month: 'numeric', day: 'numeric', year: '2-digit' }) %></td>
                    <td><%= debtor.debt %></td>
                    <td><%= debtor.amount %></td>
                </tr>
            <% } %>
        <% }) %>
        </tbody>
    </table>
    <button onclick="goToMainPage()">Back to Main Page</button>
</div>
<script>
    function goToMainPage() {
        window.location.href = "/";
    }
</script>
</body>
</html>